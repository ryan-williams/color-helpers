#!/usr/bin/env bash

local cur_dir="$(dirname "${BASH_SOURCE[0]}")"

export GIT_PROMPT=1

__prompt_command() {
  local EXIT="$?"
  PS1=""

  local cur_dir="$(dirname "${BASH_SOURCE[0]}")"

  # Setup prompt colors
  try_source "$cur_dir/prompt_colors"

  history -a
  echo -ne "\033]1;$(basename "$(pwd)")\007"

  # Red background if previous command failed, yellow otherwise.
  if [ $EXIT != 0 ]; then
    PS1+="${On_IRed}"
  else
    PS1+="${On_IYellow}"
  fi

  PS1+="${BIBlack}"
  PS1+=" "
  PS1+="\D{%a %H:%M:%S}"
  PS1+=" "
  PS1+="$clear"
  PS1+=" "
  PS1+="${BBlue}\u${clear}"
  PS1+="@"
  PS1+="${BGreen}\h${clear}"
  PS1+=": "
  PS1+="${BPurple}\W${clear}"
  if [ -z "$GIT_PROMPT" ]; then
    PS1+="${BRed}${clear}"
  else
    PS1+="${BRed}\$(__git_ps1 :%s)${clear}"
  fi
  PS1+="\$ "
}

# Append to PROMPT_COMMAND instead of overwriting it (preserves direnv hook)
# Only add if not already present to avoid duplicates
# Check for exact match with word boundaries (semicolon or start/end of string)
if [[ ! "$PROMPT_COMMAND" =~ (^|;)__prompt_command(;|$) ]]; then
  export PROMPT_COMMAND="${PROMPT_COMMAND}${PROMPT_COMMAND:+;}__prompt_command"
fi

try_source "$cur_dir/bash_colors"
try_source "/etc/bash_completion"

if [ -s "$HOME"/.dircolors ] && which dircolors &>/dev/null; then
  debug "sourcing .dircolors"
  eval "$(dircolors ~/.dircolors)"
fi
